<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans 
       http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">

	<import resource="classpath:/be/techniquez/hometinkering/lightcontrol/dpws/server/services/lightcontrol-dpws-services.xml"/>
	<import resource="classpath:/be/techniquez/hometinkering/lightcontrol/services/lightcontrol-services.xml"/>
	
	<bean name="lightControlDPWSDevice" class="be.techniquez.hometinkering.lightcontrol.dpws.server.LightControlDevice">
		<!-- Basic metadata about the device. -->
		<constructor-arg value="http://www.techniquez.be/hometinkering/lightcontrol/dpws"/>
		<constructor-arg value="LightControlDevice"/>
		<constructor-arg value="Alexander Bollaert - Francky Cappelle"/>
		<constructor-arg value="Arduino based light control system (Prototype)"/>
		<constructor-arg value="LightControlProto"/>
		<constructor-arg value="0.0.1"/>
		<constructor-arg value="1"/>
		
		<!-- This set contains the services that are hosted by the device. -->
		<constructor-arg>
			<set>
				<ref bean="lightControlDPWSService"/>
				<ref bean="lightSystemConfigurationDPWSService"/>
			</set>
		</constructor-arg>
	</bean>
</beans>