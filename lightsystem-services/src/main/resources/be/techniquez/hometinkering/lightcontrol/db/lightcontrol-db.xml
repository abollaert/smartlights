<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans 
       http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">

    <bean id="driverDAO" class="be.techniquez.hometinkering.lightcontrol.db.impl.DriverDAOSpringJDBCImpl">
       	<description>DAO that does the database operations for the installed drivers</description>
        <constructor-arg>
        	<ref bean="dataSource"/>
        </constructor-arg>
    </bean>
    
    <bean id="lightDAO" class="be.techniquez.hometinkering.lightcontrol.db.impl.LightDAOSpringJDBCImpl">
        <description>DAO that does the database operations for the installed lights.</description>
        <constructor-arg>
        	<ref bean="dataSource"/>
        </constructor-arg>
    </bean>
    
    <bean id="boardDAO" class="be.techniquez.hometinkering.lightcontrol.db.impl.BoardDAOSpringJDBCImpl">
    	<constructor-arg ref="dataSource"/>
    </bean>

    <!-- the DataSource (parameterized for configuration via a PropertyPlaceHolderConfigurer) -->
    <bean id="dataSource" destroy-method="close" class="org.apache.commons.dbcp.BasicDataSource">
        <property name="driverClassName" value="com.mysql.jdbc.Driver"/>
        <property name="url" value="jdbc:mysql://localhost:3306/lightcontrol"/>
        <property name="username" value="root"/>
        <property name="password" value="BeatIt2"/>
    </bean>

</beans>